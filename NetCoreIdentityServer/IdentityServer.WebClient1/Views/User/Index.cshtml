@model UserConfigureViewModel 
@{
    ViewData["Title"] = "Index";
}

<h3>Bu sayfayı üye olan kullanıcılar görebilir.</h3>

<div class="my-3">
    <a class="btn btn-outline-danger" asp-action="SignOut">Sign Out</a>
    <a class="btn btn-outline-danger" asp-action="SignOutV2">Sign Out v2</a>
    <br />
    <a class="btn btn-outline-warning" asp-action="GetRefreshToken">
        Restart Refresh Token
    </a>
</div>


<hr class="my-2"/>
<h5>Claim Özellikleri</h5>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Type</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.Claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
        }
    </tbody>
</table>

<h4 class="my-3">Authentication Verileri</h4>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Key</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.AuthenticationItems)
        {
            <tr>
                <td>@claim.Key</td>
                <td>@claim.Value</td>
            </tr>
        }
    </tbody>
</table>